@model StreakyAPi.Model.Auth.LoginRequest

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f2f5;
        }

        .login-container {
            background: white;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            text-align: center;
            max-width: 400px;
            width: 100%;
        }

        .login-container img {
            width: 150px;
            margin-bottom: 20px;
        }

        .login-container h2 {
            font-size: 36px;
            margin-bottom: 20px;
            color: #4A148C;
        }

        .login-container input[type="email"],
        .login-container input[type="password"] {
            display: block;
            width: calc(100% - 20px);
            padding: 10px;
            margin: 10px auto;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        .login-container button {
            width: 100%;
            padding: 10px 0;
            background-color: #4A148C;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .login-container button:hover {
            background-color: #380a62;
        }

        .login-container .help-link {
            display: block;
            margin-top: 20px;
            font-size: 14px;
            color: #4A148C;
            text-decoration: none;
        }

        .login-container .help-link:hover {
            text-decoration: underline;
        }

        .profile-info {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
            align-items: center;
        }

        .profile-info .profile-pic {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #e0dce3;
            margin-right: 10px;
        }

        .profile-info span {
            font-size: 16px;
            color: #4A148C;
            margin-right: 5px;
        }

        .profile-info .dropdown-icon {
            font-size: 12px;
            color: #6c757d;
            margin-right: 10px;
        }

        .profile-info .notification-icon {
            position: relative;
        }

        .profile-info .notification-icon img {
            width: 20px;
            height: 20px;
        }

        .profile-info .notification-icon::after {
            content: '';
            position: absolute;
            top: -5px;
            right: -5px;
            width: 10px;
            height: 10px;
            background-color: red;
            border-radius: 50%;
        }
    </style>
</head>


<body>
    <div class="profile-info">
        <div class="profile-pic"></div>
        <span>Admin</span>
        <span class="dropdown-icon">&#x25BC;</span>
        <div class="notification-icon">
            <img src="https://via.placeholder.com/20" alt="Notification Bell" />
        </div>



    </div>
    <div class="login-container">
        <img src="~/images/logo.png" alt="Logo">
        <h2>Login Page</h2>
        <form method="post" action="@Url.Action("Login", "Account")">
            <input type="email" name="Email" placeholder="Enter Email" required />
            <input type="password" name="Password" placeholder="Enter Password" required />
            <button type="submit">Log In</button>
        </form>
        <a href="#" class="help-link">Need help signing in?</a>
    </div>


</body>
</html>
